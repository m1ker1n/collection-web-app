@model CollectionWebApp.ViewModels.FieldEditModel
@{
    ViewData["Title"] = "Edit field";
}

<h1>@ViewData["Title"]</h1>

<div class="validation" asp-validation-summary="All"></div>
<form asp-action="Edit" asp-controller="Field" asp-anti-forgery="true">
    <input hidden asp-for="UserCollectionId" />
    <input hidden asp-for="Id" />
    <div class="form-group p-2">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group p-2">
        <label asp-for="Type">Type</label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<CollectionWebApp.Models.ValueType>()"></select>
    </div>
    <button class="btn btn-primary p-2" type="submit" >Submit</button>
    <a class="btn btn-secondary p-2" asp-action="Edit" asp-controller="Collection" asp-route-id="@Model.UserCollectionId">Cancel</a>
</form>