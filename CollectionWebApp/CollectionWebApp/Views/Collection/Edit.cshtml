@model CollectionWebApp.ViewModels.CollectionEditModel
@{
    ViewData["Title"] = "Edit collection";
}

<h1>@ViewData["Title"]</h1>

<div class="validation" asp-validation-summary="All"></div>
<form asp-action="Edit" asp-controller="Collection" asp-anti-forgery="true" id="mainform" enctype="multipart/form-data">
    <input hidden asp-for="UserId" />
    <input hidden asp-for="CollectionId" />    
    <div class="form-group p-2">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group p-2">
        <label asp-for="Description">Description</label>
        <textarea type="text" class="form-control" asp-for="Description"></textarea>
    </div>
    <input hidden asp-for="ImageUrl" />
    <div class="form-group p-2">
        <label asp-for="File">Image</label>
        <input type="file" class="form-control" asp-for="File" accept=".jpg, .jpeg, .png .gif">
    </div>
    <div class="form-group p-2">
        <label asp-for="ThemeId">Theme</label>
        <select asp-for="ThemeId" asp-items="Model.AvailableThemes"></select>
    </div>
    <div class="form-group p-2">
        <label asp-for="Fields">Fields</label>
        <div class="fields">
            @Html.DisplayFor(m => m.Fields)
        </div>
        <a class="btn btn-primary p-2" asp-action="Create" asp-controller="Field" asp-route-id="@Model.CollectionId">Create field</a>
    </div>
    <button class="btn btn-primary p-2" type="submit" form="mainform">Submit</button>
    <a class="btn btn-secondary p-2" asp-action="Index" asp-controller="Account" asp-route-id="@Model.UserId">Cancel</a>
</form>