@model CollectionWebApp.Models.Field

<div class="field-item rounded-1 border py-2 m-2">
    <p>Name: @Html.DisplayFor(m => m.Name)</p>
    <p>Type: @Html.DisplayFor(m => m.Type)</p>
    <a class="btn btn-secondary" asp-action="Edit" asp-controller="Field" asp-route-id="@Model.Id">Edit</a>
    <form asp-action="Delete" asp-controller="Field" asp-route-id="@Model.Id" asp-anti-forgery="true">
        <input class="btn btn-danger" type="submit" value="Delete" />
    </form>
</div>